.cart-modal
  position fixed
  bottom 20px
  right 20px
  background #fff
  color #fff
  min-width 30%
  min-height 60%
  max-height 90%
  border 1px solid #000
  z-index 1000
  overflow hidden
  height 650px
  h4
    background #000
    padding 10px
    button
      background: transparent;
      border: none;
      color: #fff;
      position absolute;
      right 10px
  .cart-product-list
    color #000
    padding 15px
    overflow auto
    height: calc(100% - 135px);
    .thead-dark
      tr
        th
          background-color #000
          color #fff
          border-color #000
    .actions
      padding 0 15px
      button
        background-color #000
        color #fff
        border-radius 0
        border none
        box-shadow none
        outline none

  .order
    text-align right
    padding 0 15px
    position absolute
    height 65px
    bottom 0
    left 0
    right 0
    a
      padding 10px
      color #fff
      background-color #000
      font-size 1.3rem
      display: inline-flex;
      text-align: center;
      justify-items: center;
      i, svg
        font-size 2rem
        margin-right 10px
@media screen and (max-width: 767px)
  .cart-modal
    min-width 100%
    bottom 0
    right 0
    left 0
    min-height 90%
    .cart-product-list
      .actions
        margin 0 auto
    .order
      text-align center
      a
        width 100%
        justify-content center
